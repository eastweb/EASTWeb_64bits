		</convert>
		<filter processStep="4">
			<isRunable>false</isRunable>		
			<className>NldasFilter</className>
		</filter>
	</Process>
	<Indices>
		<ClassName>GdalNldasCalculator</ClassName>
	</Indices>
	<Summary>
		<UseTemporalSummary>false</UseTemporalSummary>
		<Temporal>
			<CompositionStrategyClassName>GregorianWeeklyStrategy</CompositionStrategyClassName>
			<DaysPerInputData>1</DaysPerInputData>
			<DaysPerOutputData>7</DaysPerOutputData>
		</Temporal>
	</Summary>
	<QualityControl>
		<Level>None</Level>
		<Level>Level 1</Level>
		<Level>Level 2</Level>
		<Level>Level 3</Level>
	</QualityControl>
</PluginMetadata>